#include "lib.h"
#include <stdio.h>
#include <math.h>
#include <stdlib.h>

int main(void)
{
    const int size = 10000;
    int i, j;
    FILE *fp = fopen("first.ppm", "wb"); /* b - binary mode */
    (void) fprintf(fp, "P6\n%d %d\n255\n", size, size);
    for (j = 0; j < size; ++j)
    {
        double y = (2*j/(double)size-1);
        double y_sq = y * y;
        for (i = 0; i < size; ++i)
        {
            double x = 2*i/(double)size - 1;
            double x_sq = x * x;
            static unsigned char color[3];
                
            if (x_sq + y_sq < 1) {
                double z = sqrt(1-x_sq - y_sq );
                static unsigned char brightness;
                brightness = ((int)(z * 128)) % 256;
                /*color[0] = brightness;
                color[1] = brightness;
                color[2] = brightness;*/
                
            } else {
                color[0] = 0;
                color[1] = 0;
                color[2] = 0;

            }
            (void) fwrite(color, 1, 3, fp);

        }
    }
    (void) fclose(fp);
    return EXIT_SUCCESS;
}
